@model u21650846_HW03.Models.CombinedViewModel

<div>
    <div class="row">
        <div class="col-md-6">
            <div class="indi">
                <table class="table table-striped">
                    <tr>
                        <th> Name</th>
                        <th> Surname</th>
                        
                    </tr>
                    @foreach(var item in Model.authors)
            {
                <tr>
                    <td> @item.name</td>
                    <td> @item.surname</td>
                </tr>
            }
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <div class="indi">
                <table class="table table-striped">
                    <tr>
                        <th>Genre </th>
                       
                    </tr>
                    @foreach( var item in Model.types)
            {
                <tr>
                    <td> @item.name</td>
                </tr>
            }
                </table>
            </div>

        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="indi">
                <table class="table table-striped">
                    <tr>
                        <th> Student Name</th>
                        <th> Book Title</th>
                        <th>Date Taken </th>
                        <th> Date Returned</th>
                        
                    </tr>
                    @foreach( var item in Model.borrows)
            {
                <tr>
                    <td>
                        @item.students.name @item.students.surname 
                    </td>
                    <td>
                        @item.books.name
                    </td>
                    <td>
                        @item.takenDate
                    </td>
                    <td>
                        @item.broughtDate
                    </td>
                </tr>
            }
                </table>
            </div>
        </div>
    </div>
</div>