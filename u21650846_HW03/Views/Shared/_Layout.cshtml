<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary-subtle" style="color: black">
        <div class="container" style="color: black">
            @Html.ActionLink("Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: black;" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link", style = "color: black;" })</li>
                    <li>@Html.ActionLink("Maintain", "Maintain", "Maintain", new { area = "" }, new { @class = "nav-link", style = "color: black;" })</li>
                    <li>@Html.ActionLink("Reports", "Reports", "PopularBooks", new { area = "" }, new { @class = "nav-link", style = "color: black;" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        // Function to apply Bootstrap classes based on element type
        function applyBootstrapStyles() {
            // Apply Bootstrap table class to all tables
            $('table').addClass('table');

            // Apply Bootstrap button styles based on action names
            $('a:contains("Add")').addClass('btn btn-primary btn-sm');
            $('a:contains("Update")').addClass('btn btn-warning btn-sm');
            $('a:contains("Details")').addClass('btn btn-info btn-sm');
            $('a:contains("Delete")').addClass('btn btn-danger btn-sm');
        }

        $(document).ready(function () {
            applyBootstrapStyles();
        });
    </script>
</body>
</html>
